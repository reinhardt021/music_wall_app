<h1>Enlighten me with your musical finesse</h1>
<hr/>

<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">
  <div>
    <label>Song Title:</label>
    <input type="text" name="title" value="<%= @track.title %>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>
  <div>
    <label>Youtube video url:</label>
    <input type="text" name="url">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
